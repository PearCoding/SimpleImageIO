			Include="../Dist/libSimpleImageIOCore.so"
			Pack="true"
			PackagePath="runtimes/linux-x64/native/"
      Condition="Exists('../Dist/libSimpleImageIOCore.so')"/>
  </ItemGroup>

</Project>
